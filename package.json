{
  "name": "pure-react",
  "version": "1.0.0",
  "main": "index.js",
  "author": "gyang",
  "license": "MIT",
  "scripts": {
    "pretty": "prettier --write \"src/*.{js,jsx,css}\"",
    "format:check": "prettier --list-different \"src/*.{js, jsx, css}\"",
    "lint": "eslint \"src/*.{js,jsx}\"",
    "dev": "parcel src/index.html"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.15.1"
  },
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.0.0",
    "react-dom": "^16.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,scss}": [
      "yarn run pretty",
      "git add"
    ]
  }
}
